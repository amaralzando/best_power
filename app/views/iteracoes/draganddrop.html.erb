<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
<!-- Also include jQueryUI -->
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>

<style>    
  #dropzone {
      top: 150px;
      width: 200px;
      height: 200px;
      background: white;
      border: solid 1px;
  }
</style>

<%= render "navbar"%>
<div class="row">

  <div class="col s3">
    <%= render "sidenav"%>
  </div>   

  <div class="col s9">

    <div class="row">
      <div class="col s12" style="margin-top: 20px;">
      <%= link_to "Home", home_index_path, :method => "get", class: "breadcrumb grey-text text-darken-4" %>
      <%= link_to "Treinamento", treinamento_home_path, :method => "get", class: "breadcrumb grey-text text-darken-4"%>
      <%= link_to "Drag and Drop", iteracoes_draganddrop_path, :method => "get", class: "breadcrumb grey-text text-darken-4"%>
      </div>
    </div>



    <div class="row">
       <div class="tamanhodiv2">
       <h5 class="red-text text-darken-1 center">Drag and Drop!!</h5>
       </div>
    </div>

    <div class="row">
      <div class="tamanhodiv2">
        <h5 class="red-text text-darken-1 center">Arraste a carinha para dento do quadrado!!</h5>
      </div>
    </div>

    <div class="row">
      <div class="col s2"></div>

      <div class="col s4 center">
        <%= image_tag("Winston.png", id: "winston")%>
      </div>
    <div class="col s4">

    <div id="dropzone"></div>

  </div>


</div>






  <div> 
    <div class="row">
      <div class="center">
        <%= link_to "Voltar", treinamento_home_path, :method => "get", class:  "btn red"%>
      </div>
    </div>
  </div>

</div>

<script>
    $("#winston").draggable();
    $("#dropzone").droppable({
        drop: function(event, ui) {
            $(this).css('background', 'rgb(0,200,0)');
        },
        over: function(event, ui) {
            $(this).css('background', 'yellow');
        },
        out: function(event, ui) {
            $(this).css('background', 'white');
        }
    });
</script>

